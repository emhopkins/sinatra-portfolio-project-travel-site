<% if !logged_in? %>
	<% redirect '/login' %>
<%end%>
<h1><%=@destination.name%></h1>
<a href="/home">Home</a>
<% if @destination.user == current_user %>
	<a href="/destinations/<%=@destination.id%>/edit">Edit Destination</a>
	<form action="/destinations/<%=@destination.id%>" method="POST">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Delete Destination">
	</form>
<% end %>
<h4>Activities:</h4>
<ul>
  <%@destination.activities.each do |activity|%>
  <li><%=activity.name%></li>
  <%end%>
</ul>